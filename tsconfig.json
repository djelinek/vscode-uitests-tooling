{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"rootDir": "src",
		"outDir": "out",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedParameters": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"declaration": true,
		"useUnknownInCatchVariables": false
	},
	"include": [
		"src",
		".eslintrc.json"
	],
	"exclude": [
		"node_modules",
		"resources",
		"test-resources",
		"test-extensions",
		".vscode-test",
		"out"
	]
}
